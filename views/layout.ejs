          <input
            class="form-control mr-sm-2"
            type="search"
            placeholder="Search Habit"
            aria-label="Search"
            id="searchbar"
            onkeyup="search_habit()"
          />
          <button type="button" class="btn btn-outline-dark">Search</button>
        </form>
        <!-- </div> -->
      </div>
    </nav>
    <%-include('_header') %> <%- body %> <%- include('_footer') %> <%- script %>
